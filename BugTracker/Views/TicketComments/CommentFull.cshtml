

@model BugTracker.Models.Ticket

<div class="page-title">

    <h3> <span class="semi-bold">Ticket Comments</span></h3>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4> Ticket Id #@Model.Id <span class="semi-bold">Comments</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    @*<a href="#grid-config" data-toggle="modal" class="config"></a>*@
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body ">
                <table class="table table-hover table-condensed" id="example">
                    <thead>
                        <tr>
                            <th style="width:10%">
                                Author

                            </th>
                            <th style="width:10%">Comment</th>
                            
                            <th style="width:6%">Created</th>
                            <th style="width:6%">Comment ID</th>
                            
                        </tr>
                    </thead>
                    <tbody>





                        @foreach (var userC in Model.TicketComments.OrderByDescending(c=>c.Created))
                        {
                            <tr>

                                <td class="v-align-middle">@userC.User.FullNameWithEmail</td>
                                <td class="v-align-middle">@userC.Comment</td>
                                <td>@userC.Created</td>
                                <td>@userC.Id</td>
                                
                                
                            </tr>

                        }





                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @Html.ActionLink("Back To Ticket","Details","Tickets", new { id = Model.Id}, null)
</div>
