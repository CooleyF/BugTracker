@model BugTracker.Models.Ticket

<div class="page-title">

    <h3> <span class="semi-bold">Ticket History</span></h3>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4> Ticket Id #@Model.Id <span class="semi-bold">History</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    @*<a href="#grid-config" data-toggle="modal" class="config"></a>*@
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body ">
                <table class="table table-hover table-condensed" id="example">
                    <thead>
                        <tr>
                            <th style="width:10%">
                                User
                            </th>
                            <th style="width:10%">Property</th>
                            
                            <th style="width:6%">Old Value</th>
                            <th style="width:6%">New Value</th>
                            <th style="width:6%">Changed</th>
                            
                        </tr>
                    </thead>
                    <tbody>




                        @foreach (var ticketHistory in Model.TicketHistories.OrderByDescending(c=>c.Changed))
                        {
                            <tr>

                                <td class="v-align-middle">@ticketHistory.User.FullNameWithEmail</td>
                                <td class="v-align-middle">@ticketHistory.Property</td>
                                <td>@ticketHistory.OldValue</td>
                                <td>@ticketHistory.NewValue</td>
                                <td>@ticketHistory.Changed</td>

                            </tr>


                        }





                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @Html.ActionLink("Back To Ticket", "Details", "Tickets", new { id = Model.Id }, null)
</div>