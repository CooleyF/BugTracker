@using BugTracker.Helpers
@using Microsoft.AspNet.Identity
@using BugTracker.Models

@model IEnumerable<BugTracker.Models.Ticket>


@{
    var userId = User.Identity.GetUserId();
    ApplicationUser user = new ApplicationUser();
    if (userId != null)
    {
        var db = new ApplicationDbContext();
        user = db.Users.Find(userId);

    }



}


<div class="page-title">

    <h3>My Tickets - <span class="semi-bold">Tickets</span></h3>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>@user.FirstName <span class="semi-bold">Open Tickets</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    @*<a href="#grid-config" data-toggle="modal" class="config"></a>*@
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body ">
                <table class="table table-hover table-condensed" id="example">
                    <thead>
                        <tr>

                            <th style="width:10%">
                                Manage Ticket
                            </th>
                            <th style="width:10%">Ticket ID</th>
                            <th style="width:22%" data-hide="phone,tablet">Title</th>
                            <th style="width:6%">Description</th>
                            <th style="width:6%">Submitter</th>
                            <th style="width:10%" data-hide="phone,tablet">Progress</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {

                            //var AssignedUser = ticket.AssignedToUserId;
                            //if (ticket.OwnerUserId == ticket.AssignedToUserId)
                            //{
                            //    AssignedUser = "New / Unassigned";
                            //}
                            //else
                            //{
                            //    AssignedUser = ticket.AssignedToUser.FirstName;
                            //}







                            <tr>

                                <td class="v-align-middle">
                                    @Html.ActionLink("Details", "Details", new { id = ticket.Id }) || @Html.ActionLink("Edit", "Edit", new { id = ticket.Id })


                                </td>




                                <td class="v-align-middle">@ticket.Id</td>
                                <td class="v-align-middle"><span class="muted">@ticket.Title</span></td>
                                <td><span class="muted">@ticket.Description</span></td>
                                <td><span class="muted">@ticket.OwnerUser.FullName</span></td>
                                <td class="v-align-middle">
                                    <div class="progress ">
                                        <div data-percentage="@ticket.TicketStatus.Value%" class="progress-bar progress-bar-success animate-progress-bar"></div>
                                    </div>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
