
@model BugTracker.Models.Ticket

<div class="page-title">

    <h3> <span class="semi-bold">Ticket Attachments</span></h3>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4> Ticket Id #@Model.Id <span class="semi-bold">Attachments</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    @*<a href="#grid-config" data-toggle="modal" class="config"></a>*@
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body ">
                <table class="table table-hover table-condensed" id="example">
                    <thead>
                        <tr>
                            <th style="width:6%">Uploaded by</th>
                            <th style="width:10%">
                                Attachment Title
                            </th>
                            <th style="width:10%">Description</th>
                            <th style="width:22%" data-hide="phone,tablet">File Type</th>
                            <th style="width:6%">Attachment</th>


                            @*<th style="width:10%" data-hide="phone,tablet">Progress</th>*@
                        </tr>
                    </thead>
                    <tbody>




                        @foreach (var userA in Model.TicketAttachments.OrderByDescending(c=>c.Created))
                        {
                            <tr>

                                <td class="v-align-middle">@userA.User.FullNameWithEmail</td>
                                <td class="v-align-middle">@userA.Title</td>
                                <td>@userA.Description</td>
                                <td><img src="@BugTracker.Helpers.ImageUploadValidator.GetIconPath(userA.FileUrl)" class="img-responsive" style="width: 80px; " /></td>
                                <td><a target="_blank" href="@userA.FileUrl">@Path.GetFileNameWithoutExtension(userA.FileUrl) </a></td>

                            </tr>
                        }






                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @Html.ActionLink("Back To Ticket", "Details", "Tickets", new { id = Model.Id }, null)
</div>
